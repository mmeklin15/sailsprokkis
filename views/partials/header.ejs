<div class="ui inverted vertical masthead center aligned segment">
    <!-- Navigaatio -->
    <div class="ui container">
        <div class="ui fixed inverted menu">
            <div class="ui container">
                <a class="item" href="/">Blogi</a>
                <a class="item" href="/blogpost/archive">Arkisto</a>
